<div id="SkillsList">
    @foreach (var item in Model)
    {
        <div class="form-group">
            @Html.LabelFor(f => item.SkillName, htmlAttributes: new { @class = "control-label col-md-2" });
            <div class="col-md-10">
                @Html.EditorFor(f => item.SkillName, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                @Html.ValidationMessageFor(f => item.SkillName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(f => item.SkillValue, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(f => item.SkillValue, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(f => item.SkillValue, "", new { @class = "text-danger" })
            </div>
        </div>
    }


    @using (Ajax.BeginForm("_AddNewSkill", "Candidates", new AjaxOptions { UpdateTargetId = "SkillsList" }))
    {
        <div style="background-color:yellow">
            @Html.Action("_AddSkill", new RecruitRW.Models.Skill());
        </div>
    }
</div>


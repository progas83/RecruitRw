@model RWRecrut.Models.CandidateInformation


<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Adress</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.CandidateAdress.City)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CandidateAdress.City)
            @Html.ValidationMessageFor(model => model.CandidateAdress.City)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CandidateAdress.Street)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CandidateAdress.Street)
            @Html.ValidationMessageFor(model => model.CandidateAdress.Street)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CandidateAdress.Building)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CandidateAdress.Building)
            @Html.ValidationMessageFor(model => model.CandidateAdress.Building)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CandidateAdress.Flat)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CandidateAdress.Flat)
            @Html.ValidationMessageFor(model => model.CandidateAdress.Flat)
        </div>

        <p>
            <input type="submit" value="CreateAdress" />
        </p>
    </fieldset>
}

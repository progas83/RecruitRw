@model RWRecrut.Models.CandidateInformation

@{
    ViewBag.Title = "CandidateProfile";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link type="text/css" rel="stylesheet" href="../../Content/Site.css" />

    <script src="~/Scripts/jquery-1.4.4.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>


  

    <title>Index</title>
</head>
<body>

@using (Html.BeginForm()) {


        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Candidate Profile</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.FirstName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FirstName)
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.LastName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName)
            </div>

            <div id="contactsFields">
                <h3>Partial for ContactsPartial</h3>
                @Html.Partial("ContactsPartial", Model)

                <h3>Partial for SkillsPartial</h3>
                @Html.Partial("SkillsPartial", Model)

                <h3>Partial for Adress</h3>
                @Html.Partial("AdressPartial", Model)


            </div>
            <p>
                <input type="submit" value="Create" formmethod="post" formaction="CandidateProfile" />
            </p>
        </fieldset>


        <div>
            @Html.ActionLink("To main page", "Index", "Home");
        </div>
}
</body>
</html>


